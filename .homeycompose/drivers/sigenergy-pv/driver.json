{
  "name": { "en": "Sigenergy PV" },
  "class": "sensor",
  "capabilities": ["measure_power", "meter_power"],
  "images": {
    "small": "/drivers/sigenergy-pv/assets/images/small.png",
    "large": "/drivers/sigenergy-pv/assets/images/large.png"
  },
  "energy": { "cumulative": true, "solarPanel": true },
  "settings": [
    { "id": "source_device_id", "type": "text", "label": { "en": "Sigenergy device ID" }, "required": true, "value": "" },
    { "id": "poll_interval", "type": "number", "label": { "en": "Poll interval (sec)" }, "value": 30, "attr": { "min": 10, "step": 5 } }
  ],
  "pair": [
    { "id": "list_devices", "template": "list_devices", "navigation": { "next": "add_devices" } },
    { "id": "add_devices",  "template": "add_devices" }
  ]
}
